" set line number
set number
set relativenumber 
" Status bar
set laststatus=2

" Set compatibility to Vim only
" set nocompatible

" Set line wrap without entending
set wrap

" Syntax highlight
syntax on

" colorscheme [tab] desert
colorscheme desert

" Terminal split below
set splitbelow

" Set terminal size
set termwinsize=15x0

"Set Lex 20
let g:netrw_winsize = 20
